{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "server.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/", "dest": "/server.js" },
    { "src": "/login", "dest": "/server.js" },
    { "src": "/admin", "dest": "/server.js" },
    { "src": "/api/(.*)", "dest": "/api/$1" }
  ]
}
