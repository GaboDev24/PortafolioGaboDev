    </section>
    <section class="proyectos" id="Diseno">
      <h2>Diseño Gráfico</h2>
      <div class="carrusel">
        <% proyectos.filter(p => p.tipo === 'diseno' && p.destacado).forEach(proyecto => { %>
          <div class="slide">
            <img src="<%= proyecto.imagen %>" 
                 alt="<%= proyecto.titulo %>" 
                 data-img="<%= proyecto.imagen %>" 
                 class="carrusel-img">
            <p><%= proyecto.titulo %></p>
          </div>
        <% }) %>
      </div>
    </section>

    <!-- Modal de imagen -->
    <div id="modal" class="modal">
      <span class="cerrar">&times;</span>
      <span class="prev">&#10094;</span> <!-- flecha izquierda -->
